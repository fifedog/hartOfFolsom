        <queriedFields>Client__c</queriedFields>
    </recordLookups>
    <recordLookups>
        <name>Get_Sleeping_Bag</name>
        <label>Get Sleeping Bag</label>
        <locationX>676</locationX>
        <locationY>160</locationY>
