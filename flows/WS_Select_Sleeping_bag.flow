        </connector>
        <filters>
            <field>Id</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>input_Select_Sleeping_Bag</elementReference>
            </value>
        </filters>
        <object>Bag__c</object>
        <queriedFields>Id</queriedFields>
        <queriedFields>Uses_Count__c</queriedFields>
